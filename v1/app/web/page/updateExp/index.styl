@import '~theme/tools'
@import '~theme/pub'
@import '~theme/ele'

.login-container
    position: fixed
    height: 100%
    width: 100%
    background-color: #F7F7F7
    .blue-shadow
        background-color: $color_primary
        // max-height: 440px
        height: 50%
        width: 100%
        position: absolute
        top: 0
    .login-content
        text-align: center
        position: absolute
        z-index: 1
        top: 50%
        left: 50%
        margin-top: -320px
        margin-left: -338px
        width: 100%
        max-width: 670px
        padding-top: 85px
        .login-window
            background-color: #ffffff
            border-radius: 5px
            padding: 50px 89px 12px
            .el-form-item__error
                transform: scale(.8)
                left: -4px
            .login-submit
                width: 35%
                height: 36px
                line-height: 36px
                padding: 0 20px
            .el-form-item__label
                line-height: 40px
                font-size: 12px
                &:before
                    display: none
        .title
            font-size: 24px
            font-weight: 600
            color: #ffffff
            letter-spacing: 1px
            margin-bottom: 42px
        .contact
            font-size: 12px
            color: #68696A
            margin-top: 20px
    .image-code-container
        .el-form-item__content
            display: flex
            .el-input
                width: 75%
                margin-right: 10px
            >.pointer
                margin-top: -7px
            img
                width: 100px
                height: 40px
                margin-left: 12px
                background: #f4f4f4
    .submit-container
        .el-form-item__content
            margin: 0 !important
            height: 40px

@media (max-width: 600px)
    .login-container .login-content
        left 0px
        top 0
        padding-top: 35px;
        margin 0px
    .login-container .login-content .login-window
        padding 20px 10px
        border-radius: 0px;
